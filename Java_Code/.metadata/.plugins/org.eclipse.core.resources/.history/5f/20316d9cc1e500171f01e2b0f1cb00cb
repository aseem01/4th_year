public class problem_04_GameClass {

	Scanner src = new Scanner(System.in);System.out.println("We are ready for Game.Let's start :");

	System.out.println("Which is prime number 32 or 3 or 10 or 12?");System.out.print("It's your first chance .Please enter valid answer : ");
	int n=src.nextInt();if(n==3)
	{
		System.out.println("“Great! You won”");
	}else
	{
		System.out.print("It's your Second chance .Please enter valid answer : ");
		n = src.nextInt();
		if (n == 3) {
			System.out.println("“Bravo! You won”");
		} else {
			System.out.print("It's your Third chance .Please enter valid answer : ");
			n = src.nextInt();
			if (n == 3) {
				System.out.println("“You won”");
			} else {
				System.out.println("“You Lose” ");
				System.out.println("no");
			}
		}

	}

}
